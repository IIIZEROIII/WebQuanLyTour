@model IEnumerable<DuLich.Models.Slider>

@{
    ViewBag.Title = "Danh Sách Slider";
    Layout = "~/Areas/Admin/Views/Shared/layoutadmin.cshtml";
    int i = 0;
}

<div class="row" style="margin-top:50px">
    <div class="col-12">
        <p>
            DANH SACH SLIDER
            <br />
            <button type="button" class="btn btn-info btn-sm" onclick="LoadForm()"> <i class="fa fa-plus-square" aria-hidden="true"></i>&nbsp&nbspThêm mới</button>
        </p>
        <table class="table"  style="color: unset">
            <tr>
                <th>STT</th>
                <th>
                    Hình ảnh
                </th>
                <th>
                    Tên slider
                </th>
                <th>#</th>
            </tr>

            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>
                        <a href="~/Admin/Slider/CapNhatAnh?idTour=@item.ID_Slider"><img src="@item.Url" style="height:100px; width:100px" /></a>
                    </td>
                    <td>
                        @item.TieuDe
                    </td>
                    <td>
                        <button type="button" class="btn btn-icon btn-round btn-success btn-xs" onclick="{ location.href='/Admin/Slider/CapNhat?idSlider=@item.ID_Slider' }">
                            <i class="fas fa-pen-square"></i>
                        </button>
                        <button type="button" class="btn btn-icon btn-round btn-danger btn-xs" onclick="if (confirm('Có muốn xóa không?')) { location.href='/Admin/Slider/Xoa?idSlider=@item.ID_Slider' }">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div id="formBox">

</div>
@section script{
    <script>
        function LoadForm() {
            $("#formBox").load("/Admin/Slider/ThemMoi", function () {
                $("#formThemSlider").modal("show");
            });
        }
    </script>
}