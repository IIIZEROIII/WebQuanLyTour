@model DuLich.Models.HinhAnh

@{
    ViewBag.Title = "ThemHinhAnh";
    Layout = "~/Areas/Admin/Views/Shared/layoutadmin.cshtml";
}

<h2>Thêm Hình Ảnh</h2>
<hr/>
<div class="col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m=>m.idAlbum)

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Tiêu đề</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Url</label>
                <div class="col-md-10">
                    <input type="text" name="Url"/> 
                    <button type="button" onclick="ChonAnh()">Chọn ảnh</button>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default btn-sm" />
                </div>
            </div>
        </div>
    }

</div>
@section script{
    <script>
        function ChonAnh() {
            var finder = new CKFinder();
            finder.selectActionFunction = DienUrlVaoInput;
            finder.popup();
        }
        function DienUrlVaoInput(fileUrl) {
            $('input[name=Url]').val(fileUrl);
        }
    </script>
    }

