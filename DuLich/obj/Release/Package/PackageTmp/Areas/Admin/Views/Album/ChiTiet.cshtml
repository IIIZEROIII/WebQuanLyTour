        <div style="text-align:center; margin-bottom:10px; padding-top:35px; border: dashed; height:100px; width: 100px">
            <i class="fa fa-plus-square" aria-hidden="true"></i>&nbsp&nbsp
            Thêm mới
        </div>
    </a>
</div>

<div class=" col-md-12">
    @foreach (var item in new DuLich.Models.mapHinhAnh().DanhSach(Model.ID_Album))
    {
        <img src="@item.Url" style="width:100px; height:100px" />
    }
